<div class="card-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo %>)">
  <h1><%= @cocktail.name %></h1>
</div>
<br><% @cocktail.doses.each do |dose|%></h1>
<p><%=dose.description%></p>
<p><%=dose.ingredient.name%></p>
<%= link_to "Supprimer une dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"},class: "btn btn-primary" %>
<% end %>
<br>
<h2> <%=link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%></h2>
