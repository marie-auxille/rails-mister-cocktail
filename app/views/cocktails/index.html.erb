<h2>Cocktails Lab</h2>
<div class="card-container">
  <%@cocktails.each do |cocktail|%>
  <div class="card-cocktail col-md-3">
    <h3><%=cocktail.name%></h3>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo %>)">
    </div>


    <%=link_to "More infos", cocktail_path(cocktail)%>
    <%#=image_tag("cocktail.jpg",width: 500) %>

  </div>
  <% end %>
  </div>
</div>
<br>
<br>
<%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary"%>
